@model Event


<h1 style="margin-bottom:50px;">Create an activity</h1>
<form action="/create" method="post" class="col-8 mx-auto"> 
    <table>
    <tr>    
    <td>
        <label asp-for="EventName"></label>
    </td>
    <td colspan="4">
        <span class="text-danger" asp-validation-for="EventName"></span>
        <input asp-for="EventName" id="EventName" class="form-control">
    </td>
    
    </tr>
    <tr>
        <td>
            <label asp-for="Start"></label>
        </td>
        <td >
            <span class="text-danger" asp-validation-for="Start"></span>
            <input asp-for="Start" id="Start" class="form-control">
        </td>
        <td>
            <p>Duration:</p>
        </td>
        <td>
            <span class="text-danger" asp-validation-for="Duration"></span>
            <input type="number" asp-for="Duration" id="Duration" style="color:#495057; border:1px solid #ced4da; border-radius:.25rem;">
            <select asp-for="Unit" id="Unit">
                <option value="Minutes">Minutes</option>
                <option value="Hours">Hours</option>
                <option value="Days">Days</option>
            </select>
        </td>
    </tr>
    <tr>
        <td><label asp-for="Desc"></label></td>
        <td colspan="3">
            <span class="text-danger" asp-validation-for="Desc"></span>
            <input type="textarea" asp-for="Desc" id="Desc" style="width:100%; height:200px; color:#495057; border:1px solid #ced4da; border-radius:.25rem;">
        </td>
    </tr>
    </table>

    
    
    

    <input type="submit" value="Create Event" class="btn btn-success" style="margin-top:20px; margin-right:35px; float:right;">
</form>